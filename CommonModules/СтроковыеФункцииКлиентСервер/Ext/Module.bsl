	соответствиеСимволов.Вставить("“","&ldquo");
	соответствиеСимволов.Вставить("«","&laquo");
	соответствиеСимволов.Вставить("»","&raquo");
	соответствиеСимволов.Вставить(">","&gt");
	соответствиеСимволов.Вставить("<","&lt");
